<%- model_class = Agent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:bw_phone_number) %>:</strong></dt>
  <dd><%= @agent.bw_phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:agent_phone_number) %>:</strong></dt>
  <dd><%= @agent.agent_phone_number %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              agents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_agent_path(@agent), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              agent_path(@agent),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
